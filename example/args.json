{
    "environmentPrefix": "fooxample",
    "flags": [
        {
            "name": "color",
            "type": "bool",
            "description": "enable ANSI colors in CLI output"
        },
        {
            "name": "verbose",
            "type": "bool",
            "description": "enable verbose logging"
        },
        {
            "name": "file",
            "type": "string",
            "description": "path of file to process"
        },
        {
            "name": "workers",
            "type": "int",
            "description": "number of workers to use in parallel"
        },
        {
            "name": "read-only",
            "type": "bool",
            "description": "do not write output to file"
        },
    ]
}
