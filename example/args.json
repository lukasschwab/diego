{
    // Unique ID (recommended by JSON Schema): usually your Go package name, verison
    "$id": "github.com/lukasschwab/diego/example",
    // Prefix for env vars; e.g. the flag --color corresponds to the env variable LUKAS_COLOR
    "environmentPrefix": "LUKAS",
    // Flags to be parsed.
    "flags": [
        {
            // Name of the flag. This will be --color at the command line and
            // {PREFIX}_COLOR in the environment.
            "name": "color",
            // Type: either bool, int, or string.
            "type": "bool",
            // Description of what this flag configures.
            "description": "enable ANSI colors in CLI output"
        },
        {
            "name": "verbose",
            "type": "bool",
            "description": "enable verbose logging"
        },
        {
            "name": "file",
            "type": "string",
            "description": "path of file to process"
        },
        {
            "name": "workers",
            "type": "int",
            "description": "number of workers to use in parallel"
        }
    ]
}
